%ul.main-messages__namebox
  %li.main-messages__namebox__name
    = message.user.name
  %li.main-messages__namebox__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
%ul.main-messages__content
  - if message.content.present?
    %ul.main-messages__content
      = message.content
  = image_tag message.image.url, class: 'main-messages__content__image' if message.image.present?